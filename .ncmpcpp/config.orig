ncmpcpp_directory = "~/.ncmpcpp"
mpd_host = localhost
mpd_port = 6600
mpd_connection_timeout = 5
mpd_music_dir = "~/Music"
audio_output {
       type            "fifo"
       name            "my_fifo"
       path            "/tmp/mpd.fifo"
       format          "44100:16:2"
}
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_output_name = "FIFO"
visualizer_in_stereo = yes
visualizer_sync_interval = 30
visualizer_type = "spectrum"
visualizer_look = "●▮"
playlist_disable_highlight_delay = 3
message_delay_time = 3
song_list_format = "{$1►$5 %t}|{$1►$8 <untitled>}|{$1►$8 %f} $1$R{$8 %a}|{$8 <unknown artist>} {$1◀ %l}"
song_status_format = {$8%t}{$8 "%b"}|{$8 "%a"}$8
alternative_header_first_line_format = "$8$aqqu$/a$b {%t}|{%f} $/b$8$atqq$/a$9"
alternative_header_second_line_format = "{{$8%a}{$8 - %b$9}{$8 (%y)$8}}|{%D$9}"
now_playing_prefix = "$b"
now_playing_suffix = "$/b"
playlist_display_mode = classic
browser_display_mode = columns
seek_time = 4
volume_change_step = 3
autocenter_mode = yes
progressbar_look = "▪▪▫"
progressbar_boldness = no
user_interface = classic
header_visibility = no
statusbar_visibility = no
allow_for_physical_item_deletion = no
startup_screen = "playlist"
display_remaining_time = no
playlist_show_remaining_time = no
mouse_support = yes
external_editor = "/usr/bin/vim"
use_console_editor = yes
colors_enabled = yes
empty_tag_color = "white"
header_window_color = "white"
volume_color = "white"
state_line_color = "black"
state_flags_color = "white"
main_window_color = "white"
color1 = "white"
color2 = "blue"
main_window_highlight_color = "black"   ###
#progressbar_color = $9
progressbar_elapsed_color = "white"
statusbar_color = "white"
alternative_ui_separator_color = "black"
active_column_color = "black"           ###
visualizer_color = "magenta"
window_border_color = "white"
active_window_border = "white"
